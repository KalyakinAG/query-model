Функция Поле(Выражение, Псевдоним = "", ВыражениеЕстьNull = "") Экспорт
	//  Поле
	Если ТипЗнч(Выражение) = Тип("Строка") Тогда
		Если ПустаяСтрока(ВыражениеЕстьNull) Тогда
			Поле = РаботаСоСхемойЗапроса.Поле(ЗапросПакета, ОператорВыбрать, , Выражение, Псевдоним);
			Возврат ЭтотОбъект;
		КонецЕсли;
		ПсевдонимПоля = Псевдоним(Выражение, Псевдоним);//  Здесь псевдоним обязателен, т.к. используется функция в выражении
		Поле = РаботаСоСхемойЗапроса.Поле(ЗапросПакета, ОператорВыбрать, , СтрШаблон("ЕСТЬNULL(%1, %2)", Выражение, ВыражениеЕстьNull), ПсевдонимПоля);
		Возврат ЭтотОбъект;
	КонецЕсли;
	//  Массив полей
	Если ТипЗнч(Выражение) = Тип("Массив") Тогда
		Для Каждого ВыражениеПоля Из Выражение Цикл
			Поле(ВыражениеПоля);
		КонецЦикла;
		Возврат ЭтотОбъект;
	КонецЕсли;
	//  Поле-параметр любого типа
	ИмяПараметра = ОбщийКлиентСервер.ИмяПоУникальномуИдентификатору();
	Параметр(ИмяПараметра, Выражение);
	Возврат Поле("&" + ИмяПараметра, Псевдоним);
КонецФункции

Функция Поля(Выражения) Экспорт
	Перем Выражение, Псевдоним;
	МассивВыражений = ОбщийКлиентСервер.Массив(Выражения);
	Для Каждого ВыражениеПоля Из МассивВыражений Цикл
		Если ТипЗнч(ВыражениеПоля) = Тип("Строка") Тогда
			ПозицияТокена = СтрНайти(ВРег(ВыражениеПоля), " КАК ");
			Если ПозицияТокена = 0 Тогда
				Псевдоним = "";
				Выражение = ВыражениеПоля;
			Иначе
				Выражение = Лев(ВыражениеПоля, ПозицияТокена - 1);
				Псевдоним = Прав(ВыражениеПоля, СтрДлина(ВыражениеПоля) - ПозицияТокена - 4);
			КонецЕсли;			
			РаботаСоСхемойЗапроса.Поле(ЗапросПакета, ОператорВыбрать, , Выражение, Псевдоним);
		Иначе
			ВыражениеПоля.Свойство("Выражение", Выражение);
			ВыражениеПоля.Свойство("Псевдоним", Псевдоним);
			РаботаСоСхемойЗапроса.Поле(ЗапросПакета, ОператорВыбрать, , Выражение, Псевдоним);
		КонецЕсли;
	КонецЦикла;
	Возврат ЭтотОбъект;
КонецФункции

