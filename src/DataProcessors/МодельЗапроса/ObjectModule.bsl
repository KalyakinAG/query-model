Функция ОборотыИОстаткиПоПериодам(ИсточникДаты = "ВТ_ДАТЫ", Источник, Измерения = "", Ресурс = "Сумма", Условие, ДатаНачала = "&ДатаНачала", ДатаОкончания = "&ДатаОкончания", ИмяВременнойТаблицы) Экспорт
	МодельЗапроса = ЭтотОбъект;
	ВТ_ОСТАТКИ_И_ОБОРОТЫ = ИмяВременнойТаблицы + "_ОСТАТКИ_И_ОБОРОТЫ";
	ВТ_ПЕРИОДЫ = ИмяВременнойТаблицы + "_ПЕРИОДЫ";
	;//  ЗАПРОС ПАКЕТА. ВТ_ОСТАТКИ_И_ОБОРОТЫ
	МодельЗапроса.ЗапросПакета().Поместить(ВТ_ОСТАТКИ_И_ОБОРОТЫ)
		.Источник(Источник)
			.ДвиженияИГраницыПериода()
			.НачалоПериода(ДатаНачала)
			.КонецПериода(ДатаОкончания)
			.ПериодичностьДень()
			.Условие(Условие)
		//  Период
		.Поле("Период")
		;//  Измерения
		Если ЗначениеЗаполнено(Измерения) Тогда
			Для Каждого Измерение Из ОбщийКлиентСервер.Массив(Измерения) Цикл
				МодельЗапроса.Поле(Измерение);
			КонецЦикла;
		КонецЕсли;
		МодельЗапроса
		//  Ресурсы
		.Поле(Ресурс + "НачальныйОстаток")
		.Поле(Ресурс + "Приход")
		.Поле(Ресурс + "Расход")
		.Поле(Ресурс + "КонечныйОстаток")
	;//  ЗАПРОС ПАКЕТА. ВТ_ПЕРИОДЫ
	МодельЗапроса.ЗапросПакета().Поместить(ВТ_ПЕРИОДЫ)
		.Источник(ИсточникДаты)
		.Источник(ВТ_ОСТАТКИ_И_ОБОРОТЫ)
		.ВнутреннееСоединение("ВТ_ДАТЫ", ВТ_ОСТАТКИ_И_ОБОРОТЫ)
			.УсловиеСвязи("%1.Дата >= %2.Период")
		//  Дата->Период
		.Поле("ВТ_ДАТЫ.Дата")
		;//  Измерения
		Если ЗначениеЗаполнено(Измерения) Тогда
			Для Каждого Измерение Из ОбщийКлиентСервер.Массив(Измерения) Цикл
				МодельЗапроса.Поле(Измерение);
			КонецЦикла;
		КонецЕсли;
		МодельЗапроса
			.Максимум("Период")
	;//  ЗАПРОС ПАКЕТА. ИмяВременнойТаблицы
	МодельЗапроса.ЗапросПакета().Поместить(ИмяВременнойТаблицы)
		.Источник(ВТ_ПЕРИОДЫ)
		.Источник(ВТ_ОСТАТКИ_И_ОБОРОТЫ)
		.ВнутреннееСоединение(ВТ_ПЕРИОДЫ, ВТ_ОСТАТКИ_И_ОБОРОТЫ)
			.Связь("Период")
		;
		Если ЗначениеЗаполнено(Измерения) Тогда
			МодельЗапроса.Связь(Измерения);
		КонецЕсли;
		МодельЗапроса
			//  Дата->Период
			.Поле(ВТ_ПЕРИОДЫ + ".Дата")
			.Поле(ВТ_ОСТАТКИ_И_ОБОРОТЫ + ".Период")
			;//  Измерения
