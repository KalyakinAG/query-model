Функция Источник(Таблица, Знач Псевдоним = "", ПараметрыТаблицы = Неопределено) Экспорт
	ТипТаблицы = ТипЗнч(Таблица);
	Если ТипТаблицы = Тип("Строка") Тогда
		Если ОбщийКлиентСервер.ЭтоСтруктураJSON(Таблица) Тогда
			ТаблицаJSON = РаботаСКоллекцией.СтруктураВТаблицуЗначений(Таблица);
			Возврат Источник(ТаблицаJSON, Псевдоним, ПараметрыТаблицы);
		КонецЕсли;
		//  Это параметр
		Если СтрНачинаетсяС(Таблица, "&") Тогда
			ИмяПараметра = Прав(Таблица, СтрДлина(Таблица) - 1);
			ВременнаяТаблица = РаботаСоСхемойЗапроса.ОписаниеВременнойТаблицы("&" + ИмяПараметра, ПараметрыТаблицы);
			Источник = РаботаСоСхемойЗапроса.Источник(ОператорВыбрать, ВременнаяТаблица, Псевдоним);
			ИсточникСлева = Источник;
			Параметр(ИмяПараметра, ПараметрыТаблицы);
			Возврат ЭтотОбъект;
		КонецЕсли;
		//  Это имя временной таблицы из менеджера
		Если МенеджерВременныхТаблиц.Таблицы.Найти(Таблица) <> Неопределено Тогда
			ВременнаяТаблица = РаботаСоСхемойЗапроса.ОписаниеВременнойТаблицы(Таблица, МенеджерВременныхТаблиц);
			Источник = РаботаСоСхемойЗапроса.Источник(ОператорВыбрать, ВременнаяТаблица, Псевдоним);
			ИсточникСлева = Источник;
			Возврат ЭтотОбъект;
		КонецЕсли;
		//  Это имя доступной таблицы или временной из текущего запроса
		Источник = РаботаСоСхемойЗапроса.Источник(ОператорВыбрать, Таблица, Псевдоним, ПараметрыТаблицы);
		ИсточникСлева = Источник;
		Возврат ЭтотОбъект;
	КонецЕсли;
	//  Это Таблица значений JSON
	Если ТипТаблицы = Тип("Структура") ИЛИ ТипТаблицы = Тип("ФиксированнаяСтруктура") Тогда
		ТаблицаJSON = РаботаСКоллекцией.СтруктураВТаблицуЗначений(Таблица);
		ИмяПараметра = ОбщийКлиентСервер.ИмяПоУникальномуИдентификатору();
		ВременнаяТаблица = РаботаСоСхемойЗапроса.ОписаниеВременнойТаблицы("&" + ИмяПараметра, ТаблицаJSON);
		Источник = РаботаСоСхемойЗапроса.Источник(ОператорВыбрать, ВременнаяТаблица, Псевдоним);
		ИсточникСлева = Источник;
		Параметр(ИмяПараметра, ТаблицаJSON);
		Возврат ЭтотОбъект;
	КонецЕсли;
	//  Это Таблица значений, ТабличнаяЧасть, ДанныеФормыКоллекцияЗначений
	ИмяПараметра = ОбщийКлиентСервер.ИмяПоУникальномуИдентификатору();
	ВременнаяТаблица = РаботаСоСхемойЗапроса.ОписаниеВременнойТаблицы("&" + ИмяПараметра, Таблица);
	Источник = РаботаСоСхемойЗапроса.Источник(ОператорВыбрать, ВременнаяТаблица, Псевдоним);
	ИсточникСлева = Источник;
	Параметр(ИмяПараметра, Таблица);
	Возврат ЭтотОбъект;
КонецФункции

