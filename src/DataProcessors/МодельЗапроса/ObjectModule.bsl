	Если Индекс = Неопределено Тогда
		ВыбранныйИндекс = ЗапросПакета.Операторы.Количество() - 1;
	Иначе
		ВыбранныйИндекс = Индекс;
	КонецЕсли;
	ОператорВыбрать = ЗапросПакета.Операторы[ВыбранныйИндекс];
	Возврат УстановитьИсточник();
КонецФункции

Функция УстановитьЗапросПакета(Индекс = Неопределено) Экспорт
	Если Индекс = Неопределено Тогда
		ВыбранныйИндекс = СхемаЗапроса.ПакетЗапросов.Количество() - 1;
	Иначе
		ВыбранныйИндекс = Индекс;
	КонецЕсли;
	ЗапросПакета = СхемаЗапроса.ПакетЗапросов[ВыбранныйИндекс];
	Возврат УстановитьОператор();
КонецФункции

Функция ТекстЗапроса(ИмяЗапроса = Неопределено) Экспорт
	Перем Индекс;
	Если НЕ ЗначениеЗаполнено(ИмяЗапроса) Тогда
		Возврат СхемаЗапроса.ПолучитьТекстЗапроса();
	КонецЕсли;
	СтруктураЗапроса.Свойство(ИмяЗапроса, Индекс);
	Если Индекс = Неопределено Тогда
		ВызватьИсключение "Не найден текст запроса по имени " + ИмяЗапроса;
	КонецЕсли;
	Возврат СхемаЗапроса.ПакетЗапросов[Индекс].ПолучитьТекстЗапроса();
КонецФункции

